<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"/>

	<package name="default" extends="tiles-default" >
	
	<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
	</result-types>
		
		<action name="login!*" method="{1}" class="br.com.web.actions.LoginAction">
			<result type="tiles" name="invalid.fwd">Abertura.def</result>
			<result type="tiles" name="valid.fwd">Home.def</result>
			<result type="tiles" name="abertura.fwd">Abertura.def</result>
		</action>
		
		<action name="user!*" method="{1}" class="br.com.web.actions.UserAction">
			<result type="tiles" name="listAll.fwd">listaUser.def </result>					
		</action>
		
		<action name="cliente!*" method="{1}" class="br.com.web.actions.cliente.ClienteAction">
			<result type="tiles" name="clienteInclusao.fwd">ClienteInclusao.def </result>
			<result type="tiles" name="clienteConsultar.fwd">ClienteConsultar.def </result>
			<result type="tiles" name="clienteListar.fwd">ClienteListar.def </result>
			<result type="tiles" name="abertura.fwd">Abertura.def</result>					
		</action>	
		
	</package>

</struts>
