<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<include file="struts-default.xml"/>

	<package name="default" extends="tiles-default">
	
	<result-types>
			<result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
	</result-types>
		
		<action name="login!*" method="{1}" class="br.com.jm.actions.LoginAction">
			<result type="tiles" name="invalid.fwd">load.def</result>
			<result name="valid">/home.jsp</result>
		</action>
		<action name="user*!" method="{1}" class="br.com.jm.actions.UserAction">
			<result name="listAll">listUsers.jsp </result>
			<result></result>
		
		</action>
	</package>

</struts>
